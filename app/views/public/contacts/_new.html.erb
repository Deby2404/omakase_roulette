<div>
  <div class="col-md-4 offset-md-4">
    <h2 class="text-center pt-5">お問い合わせフォーム</h2>
    <%= form_with model: Contact.new, url: public_contacts_path do |f| %>
      <div class="form_group pt-4 pb-3">
        <%= f.label :タイトル %>
        <%= f.text_field :title, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :内容 %>
        <%= f.text_field :body, class:"form-control" %>
      </div>
      <div>
        <div class="text-center"><%= f.submit "送信" %></div>
      </div>
    <% end %>
  </div>
</div>






