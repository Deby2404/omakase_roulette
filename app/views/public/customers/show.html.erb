<h1>マイページ</h1>

<div>
 <%= link_to "新規投稿", new_public_menu_path %>
<table class="table table-borderless">
 <tr>
  <td>名前</td>
  <td><%= current_customer.name %></td>
 </tr>
 <tr>
  <td>メールアドレス</td>
  <td><%= current_customer.email %></td>
 </tr>
</table>
<%= link_to "プロフィール編集", edit_public_customer_path(current_customer), class: "btn btn-warning" %>
</div>

<div>
 <table class='table table-hover table-inverse'>
  <thead>
    <h4 class="text-center">投稿一覧</h4>
    <tr>
      <th>投稿日時</th>
      <th>献立名</th>
      <th>表示</th>
    </tr>
  </thead>
  <tbody>
   <% @menus.each do |menu| %>
    <tr>
      <td><%= menu.created_at.strftime("%Y/%-m/%-d") %></td>
      <td><%= menu.name %></td>
      <td><%= link_to "表示する", public_menu_path(menu), class: "btn btn-primary" %></td>
      <td><%= link_to "削除", public_menu_path(menu), method: :delete, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
 </table>
</div>

