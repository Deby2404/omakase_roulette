
<div class="container">
  <%= form_with model: @customer, url: public_customer_path(current_customer) do |f| %>
    <div class="row">
      <h3 class="m-3 bg-light">会員情報編集</h3>
    </div>

    <div class="field row mb-3">
      <div class="col-2"><%= f.label :name, "名前" %></div>
      <div class="col-5"><%= f.text_field :name, class: "form-control" %></div>
    </div>

    <div class="field row">
      <div class="col-2"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-5"><%= f.text_field :email, class: "form-control" %></div>
      <div class="ml-5"><%= f.submit "変更を保存",class: "btn btn-warning" %></div>
      <div class="ml-5">
        <%= link_to public_unsubscribe_path, class: "btn btn-outline-danger" do %>
          <i class="fa-solid fa-triangle-exclamation"></i> 退会
        <% end %>
      </div>
    </div>
  <% end %>
</div>
