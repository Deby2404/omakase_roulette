
<div class="container">
  <%= form_with model: @customer, url: public_customer_path(current_customer) do |f| %>
  <div class="row">
    <h3 class="m-3 bg-light">会員情報編集</h3>
  </div>

  <div class="field row">
    <div class="col-2"><%= f.label :name, "名前" %></div>
    <div class="col-6"><%= f.text_field :name, class: "form-control" %></div>
  </div>

  <div class="field row">
    <div class="col-2"><%= f.label :email, "メールアドレス" %></div>
    <div class="col-6"><%= f.text_field :email, class: "form-control" %></div>
  </div>

  <div class="text-center">
    <%= f.submit "変更を保存",class: "btn btn-warning" %>
    <%= link_to "退会する", public_unsubscribe_path, class: "btn btn-danger" %>
  </div>
  <% end %>
</div>