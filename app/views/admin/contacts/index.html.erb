<h2 class="text-center">お問い合わせ一覧</h2>
    <table class="table">
        <thead>
        <tr>
        <th>ユーザー名</th>
        <th>問い合わせタイトル</th>
        <th>受信日</th>
        <th></th>
        <th></th>
        </tr>
    </thead>
    <tbody>
        <% @customers.each do |customer| %>
            <% customer.contact.each do |contact| %>
              <tr>
                <td><%= contact.customer.name %></td>
                <td><%= contact.title %></td>
                <td><%= contact.created_at.strftime("%Y年%m月%d日 ") %></td>
                <td><%= link_to "返信", edit_admin_contact_path(contact), class: "btn btn-primary" %></td>
                <td><%= link_to admin_contact_path(contact), method: :delete, class: "btn btn-danger" do %>
                      <i class="fa-solid fa-trash-can"></i>
                    <% end %>
                </td>
              </tr>
            <% end %>
       <% end %>
    </tbody>
</table>