<div class="container mt-5 offset-md-3">
  <div class="row">
    <div>
      <h3>ジャンル一覧・追加</h3>
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        <% end %>

       <table class="table mt-5">
          <tr class="text-center">
            <td>ジャンル</td>
            <td></td>
            <td></td>
          </tr>
          <% @genres.each do |genre| %>
         <tr>
            <td><%= genre.name %></td>
            <td class="text-right"><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-warning" %></td>
            <td class="text-right"><%= link_to "削除", admin_genre_path(genre.id), method: :delete, class: "btn btn-danger" %></td>
         </tr>
         <% end %>
       </table>
    </div>
  </div>
</div>