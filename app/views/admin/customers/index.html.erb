<div class="container">
  <h3 class="mt-5">会員一覧</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @customers.each do |customer| %>
    <tbody>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path (customer.id) do %>
          <%= customer.name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td><%= customer.is_deleted ? "退会" : "有効" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= paginate @customers, theme: 'twitter-bootstrap-4' %>
</div>